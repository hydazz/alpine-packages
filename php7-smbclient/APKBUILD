# Maintainer: Alex Hyde <alexanderhyde@icloud.com>
pkgname=php7-smbclient
pkgver=1.0.1
pkgrel=0
pkgdesc="PHP extension that uses Samba's libsmbclient library to provide Samba related functions to PHP programs."
url="https://github.com/eduardok/libsmbclient-php"
arch="all"
depends="samba-client"
options="!check"
makedepends="php7-dev autoconf re2c samba-dev"
subpackages="$pkgname-doc"
source="${pkgname}-${pkgver}.tar.gz::https://github.com/eduardok/libsmbclient-php/archive/$pkgver.tar.gz"
builddir="$srcdir/libsmbclient-php-$pkgver"

build() {
	phpize7
	./configure --prefix=/usr --with-php-config=php-config7
	make
}

package() {
	make INSTALL_ROOT="$pkgdir"/ install
	install -d "$pkgdir"/etc/php7/conf.d
	echo "extension=smbclient.so" >"$pkgdir"/etc/php7/conf.d/smbclient.ini
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="e7e5948b968a91bf46cae8996455fe0b9e79d834cb4866afda288718bff101b33db747a4ea51737b4f666cb288c31b3f5ccb355ad70c79a04a50a3f7dc9d3e23  php7-smbclient-1.0.1.tar.gz"
